<!doctype html>
<html>

	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device.width, initial-scale=1">

		<link rel="stylesheet" href="/css/bootstrap.min.css">

		<script src="/js/jquery-3.4.1.js"></script>
		<script src="/js/bootstrap.min.js"></script>

		<title>Coin Index</title>
		<style>
		.btn
		{
			width: 90px;
		}
		</style>
	</head>

	<body>
		<div class="container">
			<table style="margin-top: 20px;" class="table table-dark">
				<thead class="thead-light">
					<tr>
						<th>
							Name
						</th>
						<th>
							Price
						</th>
						<th>
							Date
						</th>
						<th>
							Modified
						</th>
						<th style="text-align: right;">
							<%= coins.length %> Coins
						</th>
					</tr>
				</thead>
				<tbody>
					<%
					for (let coin of coins)
					{
					%>
					<tr>
						<td class="col-md-1">
							<%= coin.name %>
						</td>
						<td class="col-md-1" style="text-align: right; padding-right: 20px;">
							$ <%= coin.price.toFixed(2) %>
						</td>
						<td class="col-md-2">
							<%= new Date(coin.epoch).toLocaleString() %>
						</td>
						<td class="col-md-2">
							<%= new Date(coin.modified).toLocaleString() %>
						</td>
						<td colspan="col-md-2">
							<a href="/coins/edit/<%= coin.id %>" class="btn btn-outline-primary">Edit</span></a>
							&nbsp;
							<a href="/coins/delete/<%= coin.id %>" class="btn btn-outline-danger">Remove</span></a>
						</td>
					</tr>
					<%
					}
					%>
					<tr>
						<td class="col-md-1">
							<a href="/coins/add" class="btn btn-outline-primary">Add</a>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</body>

</html>